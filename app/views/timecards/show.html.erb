<div class="container-fluid">

  <div class="jumbotron jumbo">
    <h2 class="row-head">Timecard Detail</h2>
    <%= link_to "<i class='fa fa-archive'></i> View All Timecards".html_safe, timecards_path, class: "btn btn-default" %>
  </div>

  <div class="row1">
    <h3 class="row-head">Work Week</h3>
    <%= link_to "<strong><i class='fa fa-calendar'></i> Week of: </strong> #{@timecard.start_date.strftime('%m/%d/%Y')} - #{@timecard.end_date.strftime('%m/%d/%Y')}".html_safe, edit_timecard_path(@timecard) %>
  </div>

  <div class="row3">
    <%= button_tag("<i id='iconChange'class='fa fa-plus-circle'></i> Add a Workday".html_safe, id:"add-workday-btn",type:'button',class: "btn btn-default",title:'Click if you want to to add workday details') %>
    <div id="add-workday">
      <%= render 'days/form' %>
    </div>
  </div>
  <div class="row2">
    <%= button_tag("<i id='iconChange'class='fa fa-plus-circle'></i> View Timecard Days".html_safe, id:"view-workdays-btn",type:'button',class: "btn btn-default",title:'Click if you want to to view the days for this timecard') %>
    <div id="view-workdays">
      <%= render 'days_worked' %>
    </div>

  </div>  

</div>