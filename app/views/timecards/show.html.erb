<div class="container-fluid">

  <div class="jumbotron jumbo">
    <h2>Timecard Detail</h2>
    <%= link_to "View All Timecards", timecards_path, class: "btn btn-default" %>
  </div>

  <div class="row1">
    <h4>Work Week</h4>
    <p><strong>Start Date: </strong><%= @timecard.start_date.strftime("%m/%d/%Y") %></p>
    <p><strong>End Date: </strong><%= @timecard.end_date.strftime("%m/%d/%Y") %></p>
  </div>

  <div class="row2">
    <h4>Days</h4>
    <% @timecard.days.each do |day| %>
      <p><strong>Day Worked: </strong><%= day.work_date %></p>
    <% end %>
  </div>

</div>