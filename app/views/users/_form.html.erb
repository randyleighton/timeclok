<%= render 'layouts/errors', object: @user %>
<%= form_for @user, url_path: users_path do |f| %>

  <div class="form-group">
    <%= f.label :email, "Email", class: "col-sm-4 control-label" %>
    <div class="input-group col-sm-7">
      <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw form-fa"></i></span>
      <%= f.email_field :email, required: true, autofocus: true, :placeholder => 'email@provider.com', class: "form-control"  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, "Full Name", class: "col-sm-4 control-label" %>
    <div class="input-group col-sm-7">
      <span class="input-group-addon"><i class="fa fa-user fa-fw form-fa"></i></span>
      <%= f.text_field :name, :placeholder => 'Your full name', class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :phone, "Phone", class: "col-sm-4 control-label" %>
    <div class="input-group col-sm-7">
      <span class="input-group-addon"><i class="fa fa-phone fa-fw form-fa"></i></span>
      <%= f.phone_field :phone, :placeholder => 'ie. 123-45-6789', class: "form-control"  %>
    </div>
  </div>
  <%= render 'layouts/password', f:f %>


  <div class="form-group">
    <div class="offset3 col-sm-offset-4 col-sm-9">
      <%= render 'layouts/submit', form_type: "User", object: @user, f: f %>
    </div>
    <div class="offset3 col-sm-offset-4 col-sm-9">
      <%= link_to '<i class="fa fa-sign-in fa-fw"></i> Log In'.html_safe, new_session_path, class: "btn btn-default" if !current_user %>

    </div>
  </div>
  
<% end %>