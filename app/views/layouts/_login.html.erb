<% if user_signed_in? %>
  
  <li class="dropdown">
    <%= link_to "#{current_user.username} <b class='caret'></b>".html_safe, "#", class: "dropdown-toggle", data: {toggle: "dropdown"} %>
    <ul class="dropdown-menu">
      <li>
        <%= link_to edit_user_registration_path do %>
          <i class="fa fa-pencil fa-fw"></i>
          Edit Profile
        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out fa-fw"></i>
          Log Out
        <% end %>
      </li>
    </ul>
  </li>

<% else %>

  <li class="dropdown">
    <%= link_to "Log In or Create Account <b class='caret'></b>".html_safe, "#", class: "dropdown-toggle", data: {toggle: "dropdown"} %>
    <ul class="dropdown-menu">
      <li>
        <%= link_to new_user_registration_path do %>
          <i class="fa fa-plus-circle fa-fw"></i>
          Create Account
        <% end %>
      </li>
      <li>
        <%= link_to new_user_session_path do %>
          <i class="fa fa-sign-in fa-fw"></i>
          Log In
        <% end %>
      </li>
    </ul>
  </li>
  
<% end %>
