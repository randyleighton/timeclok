<%= button_tag(type: "submit", class: "btn btn-default btn-lg float-btn", title: f.object.new_record? ? "<i class='fa fa-plus-circle fa-fw'></i>Create ".html_safe + form_type : "<i class='fa fa-plus-circle fa-fw'></i>Update ".html_safe + form_type) do %>
  
  <%= f.object.new_record? ? "Create " + form_type : "Update " + form_type %>
<% end %>

<% if @day %>
  <%= link_to "<i class='fa fa-arrow-circle-left fa-fw'></i> Cancel".html_safe, timecard_path(@timecard), class: "btn btn-default btn-lg float-btn",title:"Cancel" %>  
<% else %>
  <%= link_to "<i class='fa fa-arrow-circle-left fa-fw'></i> Cancel".html_safe, root_path, class: "btn btn-default btn-lg float-btn",title:"Cancel" %>
<% end %>