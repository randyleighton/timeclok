  <div class="yield-box">
    <div id="flash" class="clearfix">
      <% if flash[:notice] != nil %>
        <div class='alert alert-success' role='alert'>
          <%= flash[:notice] %></div>
      <% end %>
      <% if flash[:alert] != nil %>
        <div class='alert alert-danger' role='alert'>
          <%= flash[:alert] %></div>
      <% end %>
    </div>
    <%= yield %>
  </div>