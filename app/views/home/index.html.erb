<h1>Welcome to Timeclok</h1>
<p>Manage your daily timecard</p>

<%= link_to "Manage Timecards", timecards_path, class:"btn btn-primary", title: "View and Manage all timecards" %>

<% if session[:user] %>
  <h2>Hello <%= (user = User.find(session[:user])).name %></h2>
  <h5><%= link_to "Signout", session_path(user), method: :delete %>
<% else %>
  <%= link_to "Register", new_user_path %>
  <%= link_to "Login", new_session_path %>
<% end %>